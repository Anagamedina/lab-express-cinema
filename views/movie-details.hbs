<div class="container">

  <div class="row">
    <div class="col">
      <img src="{{movie.image}}" alt="" />

    </div>
    <div class="col">

      <a href="/movies"> go back</a>
      <h1> {{movie.title}}</h1>
      <p> {{movie.description}}</p>

      <h3>stars:</h3>
      <ul> 
        {{#each movie.stars}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
      <h3>showtimes:</h3> 
        {{#each movie.showtimes}}
          <span>{{this}}</span>|
        {{/each}} 
    </div>
  </div>
</div>